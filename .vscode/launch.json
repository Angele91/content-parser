{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "./test/**/*.spec.js",
        "--require", "babel-core/register",
        "--require", "babel-polyfill",
        "--recursive",
        "--colors"
      ],
      "runtimeArgs": [
        "--nolazy"
      ]
    }
  ]
}
