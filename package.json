{
  "scripts": {
    "clean": "rimraf ./*.log && lerna exec --parallel -- rimraf coverage lib/* temp",
    "build": "yarn clean && lerna exec --parallel -- babel src --out-dir lib --config-file ../../.babelrc",
    "test": "lerna exec --concurrency 1 -- nyc mocha ./test/**/*.spec.js --require ../../test.js --recursive",
    "coverage": "codecov",
    "lint": "eslint packages",
    "postinstall": "yarn build && yarn bootstrap",
    "bootstrap": "lerna bootstrap",
    "bump": "yarn build && lerna publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "@ridi/eslint-config": "^4.1.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.5.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "lerna": "^3.16.4",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0"
  }
}
